---
interface IContenido{
    title: string
    tecnologis:string
    image : string
    url?: string
}

const {title, tecnologis, image, url} = Astro.props
---
<!-- aqui va a ser para rendersizar las imagenes como tal -->


<li class="container grid grid-cols-2 gap-5 ">
    <div class="container  image-container">
        <img src={ image } alt={ title } class=>
        <div class="overlay rounded-lg overlay absolute bg-black bg-opacity-70 text-white p-4">
        <h2>{ title }</h2>
        <h3>{ tecnologis }</h3>
        </div>
    </div>
    <a href={ url } class="bg-red-600 rounded-t-3xl rounded-b-3xl"></a>
</li>

<style>
  .image-container {
    position: relative;
    display: inline-block;
  }

  .image-container img {
    width: 100%; 
    height: auto;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(94, 173, 242, 0.4);
    color: #fff;
    display: none;
    padding: 20px;
    box-sizing: border-box;
    transition: opacity 0.3s;
  }

  .image-container:hover .overlay {
    display: block;
  }

  .overlay h2 {
    opacity: 0;
    transition: opacity 0.3s;
  }

  .image-container:hover .overlay h2 {
    opacity: 1;
  }
  .overlay h2 {
    opacity: 0;
    transition: opacity 0.3s;
    text-align: left; 
    animation: fadeIn 1s ease forwards; 
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>