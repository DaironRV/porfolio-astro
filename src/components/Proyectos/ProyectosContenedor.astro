---
export interface lContenido{
    Title:string,
    Image:string
    Tecnologis:string
} 

const { Title, Image, Tecnologis} = Astro.props
---


<div class="image-container rounded-lg">
    <img src={Image} alt={Title} height="20px" class="rounded-lg object-none h-40 w-90" />
    <div
        class="overlay rounded-lg overlay absolute bottom-0 left-0 bg-black bg-opacity-70 text-white p-4">
        <h2 class="text-5xl font-bold text-cyan-100">{Title}</h2>
        <p class="text-3xl text-cyan-100">{ Tecnologis }</p>
    </div>
</div>